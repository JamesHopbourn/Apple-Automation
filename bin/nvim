#!/usr/bin/env zsh
#  nvim.sh
#  nvim
#
#  Created by James Hopbourn on 2019/12/18
#  Copyright © 2019 James Hopbourn. All rights reserved.

author='James Hopbourn'
filename=`echo $1|awk -F . '{print $1}'`
extension=`echo $1|awk -F . '{print $NF}'`

if [ -f "$1" ]; then
    case $extension in
        py)
        vim $1
		python $1
		exit
		;;
		c)
		vim $1
		gcc $1 -o $filename
		./$filename
		exit
		;;
		sh)
		vim $1
		chmod +x $1
		./$1
		exit
		;;
		*)
		vim $1
		exit
    esac
fi

case $extension in
py)
    echo '#!/usr/bin/env python3' > $1
    echo '#-*- coding:utf-8 -*-' >> $1
    echo '#  '$1 >> $1
    echo '#  '$filename >> $1
    echo '#' >> $1
    echo '#  Created by '$author' on '`date +%Y/%m/%d` >> $1
    echo '#  Copyright © '`date +%Y`' '$author'. All rights reserved.' >> $1
    echo '' >> $1
    chmod +x $1
    vim $1
    ;;
c)
    echo '#include<stdio.h>' > $1
    echo '/*' >> $1
    echo '  '$1 and>> $1
    echo '  '$filename >> $1
    echo '' >> $1
    echo '  Created by '$author' on '`date +%Y/%m/%d` >> $1
    echo '  Copyright © '`date +%Y`' '$author'. All rights reserved.' >> $1
    echo '*/' >> $1
    echo '' >> $1
    echo 'int main(){' >> $1
    echo '' >> $1
    echo '}' >> $1
    vim $1
    gcc $1 -o $filename
    ;;
sh)
    echo '#!/usr/bin/env zsh' > $1
    echo '#  '$1 >> $1
    echo '#  '$filename >> $1
    echo '#' >> $1
    echo '#  Created by '$author' on '`date +%Y/%m/%d` >> $1
    echo '#  Copyright © '`date +%Y`' '$author'. All rights reserved.' >> $1
    echo '' >> $1
    chmod +x $1
    vim $1
    ;;
*)
    vim $1
    chmod +x $1
    ;;
esac
